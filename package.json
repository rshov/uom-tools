{
  "name": "uom-tools",
  "version": "2.1.0",
  "description": "Tools to parse and format amounts in different units of measure.",
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:watch": "tsc --watch",
    "lint": "tslint --project \"./tsconfig.json\"",
    "test": "mocha --reporter spec",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "units",
    "measurement",
    "conversion",
    "length",
    "volume",
    "inches",
    "feet",
    "meters",
    "millimeters",
    "centimeters",
    "formatting",
    "parsing"
  ],
  "author": "rshov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rshov/uom-tools.git"
  },
  "bugs": {
    "url": "https://github.com/rshov/uom-tools/issues"
  },
  "homepage": "https://github.com/rshov/uom-tools#readme",
  "dependencies": {
    "convert": "^5.12.0",
    "numeral": "^2.0.6"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@types/numeral": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "chai": "^6.0.1",
    "eslint": "^9.36.0",
    "mocha": "^11.7.2",
    "typescript": "^5.9.2"
  }
}
